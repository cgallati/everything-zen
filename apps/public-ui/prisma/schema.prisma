datasource db {
  provider             = "mysql"
  url                  = env("DATABASE_URL")
  referentialIntegrity = "prisma"
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["dataproxy", "referentialIntegrity"]
}

model Availability {
  id        Int       @id @default(autoincrement())
  updatedAt DateTime  @updatedAt
  start     DateTime  @unique
  type      EventType @relation(fields: [typeId], references: [id])
  typeId    Int
  event     Event?
}

model Event {
  id             Int          @id @default(autoincrement())
  availability   Availability @relation(fields: [availabilityId], references: [id])
  availabilityId Int          @unique
  type           EventType    @relation(fields: [typeId], references: [id])
  typeId         Int
  start          DateTime     @unique
  /// duration in minutes of the booked event
  duration       Int          @default(0)
  party          Guest[]
  partySize      Int?
  partyType      PartyType    @default(OTHER)
  paid           Boolean      @default(false)
}

enum PartyType {
  COUPLE
  FRIENDS
  BACHELORETTE
  BIRTHDAY
  OTHER
}

model EventType {
  id           Int            @id @default(autoincrement())
  type         String         @unique
  /// cost in USD of the event
  cost         Int
  /// duration in minutes of the event
  duration     Int
  Availability Availability[]
  Event        Event[]
}

model Guest {
  id      Int    @id @default(autoincrement())
  event   Event  @relation(fields: [eventId], references: [id])
  eventId Int
  name    String
  email   String
  phone   String
}
